@import "ui/index.wxss";
@import "themes/default/weui.wxss";
page{
    background-color: #F8F8F8;
}
.page-container {
    background: #F8F8F8;
    overflow: hidden;
    min-height: 100vh;
    box-sizing: border-box;
}

.page-title {
    position: relative;
    padding: 15px 0;
    margin: 10px 15px;
    line-height: 25px;
    font-size: 25px;
    color: #666;
    border-bottom: 1rpx solid #e5e5e5;
}

.page-content {
    padding: 15px;
    overflow: hidden;
    color: #666;
}

.page-content--without-pd {
    padding: 15px 0;
}

.container {
    background: #F9F9F9;
    overflow: hidden;
    min-height: 100vh;
    box-sizing: border-box;
    padding: 15px 0;
}
.container::before {
    position: fixed;
    top: 0;
    left: 0;
    content: ' ';
    width: 100%;
    height: 1rpx;
    background-color: #e2e2e2;
    z-index: 5;
}
.doc-title {
    position: relative;
    padding: 15px 0;
    margin: 10px 15px;
    line-height: 25px;
    font-size: 25px;
    color: #666;
}
.doc-description {
    margin: 14px 0;
    padding: 0 15px;
    font-size: 14px;
    line-height: 20px;
    color: #666;
}

/* category style 3*/
.goods-category-style-3{
    box-shadow: 0 2px 6px 0 rgba(0,0,0,0.04);
}
.goods-category-style-3 aside{
    width: 100vw;
    white-space: nowrap;
    overflow: hidden;
    box-sizing: border-box;
    padding: 10px;
    background-color: #fff;
    display: block;
}
.goods-category-style-3 aside details{

}
.goods-category-style-3 aside details text {
    /* border: 1px solid #ffffff; */
    /* border-radius: 24px; */
    height: 24px;
    margin-right: 10px;
    background-color: #ffffff;
    font-size: 14px;
    padding: 0 20px;
    display: inline-block;
    line-height: 24px;
    color: grey;
}
.goods-category-style-3 aside details text.active {
    /* border: 1px solid #FF0000; */
    background-color: #fff;
    color: #000000;
    font-weight: bolder;
}
.goods-category-style-3 section{
    display:block;
    border-top:6px solid rgba(0, 0, 0, 0);
    border-left:6px solid rgba(0, 0, 0, 0);
    border-right:6px solid rgba(0, 0, 0, 0);
    box-sizing:boder-box;
    overflow:hidden;
}
.goods-category-style-3 section details{
    background-color: #fff;
    display: block;
    overflow: hidden;
    float: left;
    margin-bottom: 6px;
}
.goods-category-style-3 section details:nth-child(odd){
    margin-right: 6px;
}
.goods-category-style-3 section details>image{
    margin: 0;
    padding: 0;
    border: 0;
    display: block;
}
.goods-category-style-3 section details .title-price{
    background-color: #fff;
    display: block;
    overflow: hidden;
    padding: 10px;
}
.goods-category-style-3 section details .title-price text{
    color: #333333;
    height: 40px;
    line-height: 20px;
    margin-bottom: 15px;
    font-size: 14px;
    overflow: hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
}
.goods-category-style-3 section details .title-price i{
    line-height:14px;
    height:14px;
    color:#FF0000;
    margin-bottom:5px;
    font-size:14px;
    display:inherit;
    font-weight: bold;
}