@import "../../../wxParse/wxParse.wxss";
.order-fill {
    display: block;
    padding-bottom: 160px
}

.order-fill fa-panel {
    background-color: #ffffff;
    margin-bottom: 15px;
    display: block
}

.order-fill fa-cell {
    background-color: #ffffff
}

.order-fill .address {
    background-color: #ffffff;
    display: block;
    overflow: hidden;
}

.order-fill .address .un-select {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding-top: 15px;
}

.order-fill .address .un-select image {
    width: 32px;
    height: 32px;
    margin-bottom: 10px;
}

.order-fill .address .un-select text {
    font-size: 14px;
    line-height: 14px;
    display: block;
    color: #ff4400;
    margin-bottom: 15px;
}

.order-fill .address .selected {}

.order-fill .address .selected .name-phone {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
}

.order-fill .address .selected .user .name {
    font-size: 16px;
    font-weight: bold;
    margin-right: 10px;
    line-height: 16px;
    display: block;
}

.order-fill .address .selected .user .phone {
    font-size: 14px;
    font-weight: bold;
    margin-right: 15px;
    line-height: 14px;
    display: block;
}

.order-fill .address .selected .address {
    font-size: 14px;
    line-height: 14px;
    display: block;
    color: #999999;
}

.address-bottom-decoration {
    width: 100vw;
    height: 5px;
    display: block;
    overflow: hidden;
}

.order-fill .goods-list {
    display: flow;
    overflow: hidden;
    justify-content: flex-start;
}

.order-fill .goods-list image {
    margin-right: 5px;
    width: 48px;
    height: 48px;
    float: left;
}

.order-fill .message {}

.order-fill .message input {
    font-size: 14px;
    padding: 5px 15px;
    background-color: #F8F8F8;
    border-radius: 3px;
}

.placeholder-class {
    color: #cccccc
}

.order-fill .footer {
    display: flex;
    justify-content: flex-end;
    background-color: #FFFFFF;
}

.order-fill .footer .left {
    display: flex;
    align-items: center;
}

.order-fill .footer .left label {
    font-size: 16px;
    line-height: 16px;
    color: #999999;
    display: block;
}

.order-fill .footer .left text {
    font-size: 18px;
    line-height: 18px;
    font-weight: bold;
    color: #FF635C;
    display: block;
    margin-right: 15px;
}

.order-fill .freight-price {
    color: #FF635C;
    font-size: 12px;
    line-height: 12px;
    display: block;
}

.order-fill .freight-desc {
    color: #CCCCCC;
    font-size: 12px;
    line-height: 12px;
    display: block;
    margin-top: 10px;
}

.order-fill .total-price {
    font-size: 18px;
    font-weight: bold;
    color: #FF635C;
}

.order-fill .one-item {
    display: flex;
    justify-content: flex-start;
}

.order-fill .one-item image {
    width: 75px;
    height: 75px;
    display: block;
    margin-right: 10px;
}

.order-fill .one-item .body {
    flex: 1;
}

.order-fill .one-item .body .title {
    font-size: 14px;
    color: #333;
    line-height: 20px;
    font-weight: bold;
    display: block;
    overflow: hidden;
    margin-bottom: 10px;
}

.order-fill .one-item .body .price {
    font-size: 12px;
    color: #333;
    line-height: 12px;
    display: block;
    overflow: hidden;
    font-weight: bold;
}

.order-fill .one-item .body .spec {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
    flex: 1
}

.order-fill .one-item .body .spec text {
    font-size: 12px;
    color: #999;
    line-height: 12px;
    display: block;
    overflow: hidden;
}

.address-footer-line {
    width: 100vw;
    height: 3px;
    display: block;
}

.order-fill .selected .user {
    padding: 12px 15px;
}


/* button */

.fa-btn {
    position: relative;
    color: #333;
    background-color: #fff;
    padding-left: 15px;
    padding-right: 15px;
    border-radius: 2px;
    font-size: 16px;
    line-height: 45px;
    height: 45px;
    box-sizing: border-box;
    text-decoration: none;
    text-align: center;
    vertical-align: middle;
    overflow: visible;
}

.fa-btn--danger {
    border-radius: 0;
    border: none;
    color: #fff;
    background-color: #FF635C;
}

button:after {
    border: none;
}


/* popup mask */
.tips {
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 100;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
}

.tips .tips_box {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 75%;
    height: auto;
    border-radius: 5rpx;
    background: #fff;
    /* overflow: hidden; */
}

.tips .tips_box .hint_view {
    display: flex;
    align-items: center;
    position: relative;
}

.tips .tips_box .hint_view .text {
    display: flex;
    flex-direction: column;
    margin: 12rpx 24rpx;
}

.tips .tips_box .hint1 {
    margin-top: 28rpx;
    padding-bottom: 18rpx;
    text-align: center;
    font-size: 40rpx;
    color: #1a1a1a;
    line-height: 52rpx;
    border-bottom: 1px solid;
}

.tips .tips_box .hint2 {
    margin-top: 14rpx;
    text-align: justify;
    /* text-indent: 52rpx; */
    font-size: 26rpx;
    color: #666;
    line-height: 42rpx;
    max-height: 600rpx;
    overflow-y: auto;
}

.tips .tips_box .login {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    line-height: 84rpx;
    border-radius: 0;
    font-size: 32rpx;
    letter-spacing: 6rpx;
    color: #fff;
}

.tips .tips_box .login:after {
    border-radius: 0;
}

.isTipShow {
    display: block;
}

.isTipHide {
    display: none;
}

.preventTouchMove {
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: fixed;
    z-index: 0;
}

.close_btn {
    color:#777;
    font-family:arial, sans-serif;
    font-size:24px;
    line-height:1;
    position:absolute;
    right:-11px;
    top:-12px;
    text-decoration:none;
    text-shadow:0 1px 0 #fff;
    width:24px;
    text-align:center;
    background:#FF635C;
    color:white;
    border-radius:50%;
    
}

