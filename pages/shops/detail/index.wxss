.shop-info {
    padding-top: 15px;
    position: relative;
}

.shop-header {
    text-align: center;
    border-bottom: 10rpx solid #dddddd;
    position: relative;
    z-index: 1;
    padding: 15px;
}

.shop-info .bg-gray {
    content: "shutup";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 60px;
    background: #cccccc;
    z-index: 0;
}

.shop-info {
    border-bottom: 10rpx solid #dddddd;
}

.shop-header .shop-image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
}

.item {
    margin-bottom: 10px;
}

.shop-desc {
    padding: 15px 8px;
    font-size: 12px;
    border-bottom: 10rpx solid #dddddd;
}

.headline {
    font-size: 14px;
    font-weight: bold;
    padding-bottom: 10px;
}

.shop-products .headline {
    padding: 15px 8px;
}

.shop-owner-box {
    padding-top: 10px;
    color: #999999;
}


/* global style (todo)*/

.item-icon-box {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    line-height: 1;
}

.item-icon-box.left {
    justify-content: flex-start;
}

.item-icon-box .icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
    margin-bottom: 0;
}

.item-icon-box .icon.avatar {
    border-radius: 50%;
    width: 48rpx;
    height: 48rpx;
    border: 1px solid #dddddd;
}

.item-icon-box .gray {
    color: #888888;
}

.top-banner-section {
    position: relative;
}

.video-images-switch {
    font-size: 14px;
    line-height: 1;
    text-align: center;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 20px;
    color: #ffffff;
}

.video-images-switch ul {
    display: inline-block;
}

.video-images-switch ul li {
    display: inline-block;
    padding: 5px 10px;
    border: none;
    border-radius: 15px;
    background: #f9f9f9;
    color: #666666;
}

.video-images-switch ul li.active {
    background: red;
    color: #ffffff;
}

.page-video video {
    width: 100vw;
    height: 100vw;
}

.page-video {
    font-size: 0;
}

.goods-image-swiper {
    width: 100vw;
    height: 100vw;
}

.goods-image-swiper image {
    width: 100vw;
    height: 100vw
}


